<UserControl x:Class="VendingMachine.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendingMachine"
             mc:Ignorable="d" 
             Name="ctlBlock" >
    <Grid >
        <DockPanel Name="itmBlock" Height="{Binding BlockHeight, ElementName=ctlBlock}">
            <Border Margin="{Binding BlockMargin, ElementName=ctlBlock}" Background="{Binding BlockColor, ElementName=ctlBlock}" CornerRadius="2" />
        </DockPanel>
    </Grid>
</UserControl>
